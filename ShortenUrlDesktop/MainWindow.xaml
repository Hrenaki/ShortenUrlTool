<Window x:Class="ShortenUrlDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShortenUrlDesktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" x:Name="window">
    <Grid DataContext="{Binding ElementName=window}">
        <Grid Margin="10">
            <TabControl DataContext="{Binding ViewModel}">
                <TabItem Header="Shorten">
                    <StackPanel>
                        <TextBox Text="{Binding LongUrl}" />
                        <TextBlock Text="{Binding ShortUrl}" />
                        <Button Content="Shorten" Command="{Binding GetShortUrlCommand}"/>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Lengthen">
                    
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
